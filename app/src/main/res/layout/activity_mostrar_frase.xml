<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_mostrarFrase">

    <ImageView
        android:id="@+id/imagenAutor"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        tools:srcCompat="@drawable/platonimagen" />

    <TextView
        android:id="@+id/labelNombreAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenAutor"
        android:text="@string/autor1"
        android:textSize="10sp"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/labelFraseCelebre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNombreAutor"
        android:text="@string/frase1"
        android:padding="@dimen/padding_base"
        />
</RelativeLayout>